<div class="row">
  <div class="col-md-7">
    <h2 class="page-header">All of the Statuses</h2>

    

    <% @statuses.each do |status| %>
      <div class="status">
        <strong><%= status.user.full_name %></strong>
        <p><%= status.context %></p>
        <div class="meta">
          <%= link_to time_ago_in_words(status.created_at) + " ago", status %> 
          <span class="admin"> |
            <%= link_to "Edit", edit_status_path(status) %> |
            <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
          </span>
        </div>
      </div>       
    <% end %>

    <br>
  </div>
  <div class="col-md-5">
    <h2 class="page-header">New Status</h2>
    <%= link_to "Post a New Status", new_status_path, class:"btn btn-success" %>
  </div>  
</div>


